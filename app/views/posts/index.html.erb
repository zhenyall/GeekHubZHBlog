<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Descriprion</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <h1>Posts</h1>
    <% @posts.each do |post| %>
      <div class="alert alert-light">
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <%- link_to "Reed more", posts_path(post), :class => 'btn btn-outline-primary' %>
      </div>
    <% end %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

